{
  "name": "yuai",
  "description": "Monorepo of simple react components with styled-components",
  "repository": "git@github.com:ozylog/yuai.git",
  "author": "Cahya Pribadi <ozylog@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "lint": "eslint ./packages/*/src/ --ext .ts --ext .tsx --fix",
    "lerna:install": "lerna bootstrap",
    "lerna:build": "lerna run build",
    "lerna:publish": "yarn lint & lerna run build && lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.0",
    "lerna": "^3.20.2",
    "typescript": "^3.7.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": 1,
      "no-useless-escape": 0,
      "react/prop-types": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-ignore": 1,
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "^16.8.x"
      }
    }
  }
}
